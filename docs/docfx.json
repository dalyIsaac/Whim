{
  "metadata": [
    {
      "src": [
        {
          "src": "../src",
          "files": ["**/Whim*.csproj"],
          "exclude": [
            "**/Whim*.Tests.csproj",
            "**/Whim.Runner.csproj",
            "**/Whim.TestUtils.csproj"
          ]
        }
      ],
      "dest": "api",
      "shouldSkipMarkup": true
    }
  ],
  "build": {
    "content": [
      {
        "files": ["**/*.{md,yml}"],
        "exclude": ["_site/**", "_includes/**"]
      }
    ],
    "resource": [
      {
        "files": ["images/**"],
        "exclude": ["_site/**", "obj/**"]
      }
    ],
    "output": "_site",
    "template": ["default", "modern", "template"],
    "globalMetadata": {
      "_appName": "Whim",
      "_appTitle": "Whim",
      "_appFooter": "Copyright Â© 2021-2024 Isaac Daly",
      "_appFaviconPath": "images/icon.ico",
      "_appLogoPath": "images/icon.svg",
      "_enableSearch": true,
      "pdf": false
    }
  }
}
