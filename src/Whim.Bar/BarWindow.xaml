<Window x:Class="Whim.Bar.BarWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:local="clr-namespace:Whim.Bar"
		mc:Ignorable="d"
		WindowStyle="None"
		ResizeMode="NoResize"
		ShowInTaskbar="False"
		Title="Whim Bar" Height="450" Width="800">
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="1*"/>
			<ColumnDefinition Width="1*"/>
			<ColumnDefinition Width="1*"/>
		</Grid.ColumnDefinitions>

		<StackPanel x:Name="LeftPanel" Orientation="Horizontal" Grid.Column="0"/>
		<StackPanel x:Name="CenterPanel" Orientation="Horizontal" Grid.Column="1"/>
		<StackPanel x:Name="RightPanel" Orientation="Horizontal" Grid.Column="2" FlowDirection="RightToLeft"/>
	</Grid>
</Window>
