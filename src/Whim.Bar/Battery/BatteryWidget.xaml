<UserControl
	x:Class="Whim.Bar.BatteryWidget"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	d:DesignHeight="450"
	d:DesignWidth="800"
	mc:Ignorable="d"
>
	<StackPanel FlowDirection="LeftToRight" Orientation="Horizontal" Style="{StaticResource bar:battery:stack_panel}">
		<FontIcon Glyph="{x:Bind ViewModel.Icon, Mode=OneWay}" Style="{StaticResource bar:battery:font_icon}" />
		<TextBlock
			Style="{StaticResource bar:battery:text_block}"
			Text="{x:Bind ViewModel.RemainingChargePercent, Mode=OneWay}"
		/>
	</StackPanel>
</UserControl>
