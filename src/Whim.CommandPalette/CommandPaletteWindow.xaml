<Window
	x:Class="Whim.CommandPalette.CommandPaletteWindow"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="using:Whim.CommandPalette"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d">

	<Grid Background="{ThemeResource AcrylicBackgroundFillColorDefaultBrush}">
		<Grid.RowDefinitions>
			<RowDefinition Height="48" />
			<RowDefinition Height="*" />
		</Grid.RowDefinitions>

		<TextBox
			x:Name="TextEntry"
			FontSize="24"
			PlaceholderText="Start typing..."
			Text="{x:Bind ViewModel.Query, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" />

		<ItemsControl Grid.Row="1" ItemsSource="{x:Bind ViewModel.Matches}">
			<ItemsControl.ItemTemplate>
				<DataTemplate x:DataType="local:CommandPaletteMatch">
					<Grid>
						<Grid.ColumnDefinitions>
							<ColumnDefinition Width="*" />
							<ColumnDefinition Width="200" />
						</Grid.ColumnDefinitions>

						<TextBlock Text="{x:Bind Command.Title}" />
						<TextBlock Grid.Column="1" Text="{x:Bind Keybind}" />
					</Grid>
				</DataTemplate>
			</ItemsControl.ItemTemplate>
		</ItemsControl>
	</Grid>
</Window>
