<Window
	x:Class="Whim.CommandPalette.CommandPaletteWindow"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="using:Whim.CommandPalette"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d">

	<Grid Background="{ThemeResource AcrylicBackgroundFillColorDefaultBrush}">
		<Grid.RowDefinitions>
			<RowDefinition Height="48" />
			<RowDefinition Height="*" />
		</Grid.RowDefinitions>

		<TextBox
			x:Name="TextEntry"
			FontSize="24"
			KeyDown="TextEntry_KeyDown"
			PlaceholderText="Start typing..."
			TextChanged="TextEntry_TextChanged" />

		<ListView
			x:Name="CommandListItems"
			Grid.Row="1"
			IsTabStop="False"
			SelectionMode="Single">
			<ListView.ItemTemplate>
				<DataTemplate x:DataType="local:CommandPaletteMatch">
					<Grid>
						<Grid.ColumnDefinitions>
							<ColumnDefinition Width="*" />
							<ColumnDefinition Width="200" />
						</Grid.ColumnDefinitions>

						<TextBlock Text="{x:Bind Command.Title}" />
						<TextBlock Grid.Column="1" Text="{x:Bind Keybind}" />
					</Grid>
				</DataTemplate>
			</ListView.ItemTemplate>
		</ListView>
	</Grid>
</Window>
