<Window
	x:Class="Whim.CommandPalette.CommandPaletteWindow"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="using:Whim.CommandPalette"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d">

	<Grid x:Name="WindowContainer" Background="{ThemeResource AcrylicBackgroundFillColorDefaultBrush}">
		<Grid.RowDefinitions>
			<RowDefinition Height="auto" />
			<RowDefinition Height="*" />
		</Grid.RowDefinitions>

		<Grid>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="*" />
				<ColumnDefinition Width="auto" />
			</Grid.ColumnDefinitions>

			<TextBox
				x:Name="TextEntry"
				MaxHeight="{x:Bind local:CommandPaletteWindow.TextEntryHeight}"
				KeyDown="TextEntry_KeyDown"
				PlaceholderText="{x:Bind Path=ViewModel.PlaceholderText, Mode=OneWay}"
				Text="{x:Bind Path=ViewModel.Text, Mode=TwoWay}"
				TextChanged="TextEntry_TextChanged" />

			<StackPanel
				Grid.Column="1"
				Margin="2,0"
				Orientation="Horizontal"
				Spacing="2"
				Visibility="{x:Bind Path=ViewModel.SaveButtonVisibility, Mode=OneWay}">
				<Button x:Name="Cancel" Content="Cancel" />

				<Button
					x:Name="Save"
					Content="Save"
					Style="{StaticResource AccentButtonStyle}" />
			</StackPanel>
		</Grid>


		<Grid x:Name="PaletteContent" Grid.Row="1" />
	</Grid>
</Window>