<UserControl
	x:Class="Whim.CommandPalette.SelectRow"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="using:Whim.CommandPalette"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d">

	<Grid x:Name="PaletteItemPanel" MaxHeight="{x:Bind local:SelectRow.SelectRowHeight}">
		<CheckBox Checked="CheckBox_Checked" IsChecked="{x:Bind Path=Item.Data.IsSelected, Mode=TwoWay}">
			<TextBlock x:Name="OptionTitle" />
		</CheckBox>
	</Grid>
</UserControl>