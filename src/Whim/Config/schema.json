{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://raw.githubusercontent.com/dalyIsaac/Whim/main/src/Whim/Config/schema.json",

  "type": "object",
  "properties": {
    "workspaces": {
      "type": "array",
      "items": { "$ref": "#/$defs/Workspace" }
    },

    "layoutEngines": { "$ref": "#/$defs/LayoutEngineCollection" },

    "monitors": {
      "type": "array",
      "items": { "$ref": "#/$defs/Monitor" }
    },

    "keybinds": {
      "type": "array",
      "items": { "$ref": "#/$defs/Keybind" }
    },

    "filters": {
      "type": "array",
      "items": { "$ref": "#/$defs/Filter" }
    },

    "routers": {
      "type": "array",
      "items": { "$ref": "#/$defs/Router" }
    },

    "plugins": { "$ref": "#/$defs/PluginCollection" }
  },

  "$defs": {
    "Workspace": {
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "layoutEngines": { "$ref": "#/$defs/LayoutEngineCollection" }
      },
      "required": ["name"]
    },

    "LayoutEngineCollection": {
      "type": "array",
      "items": { "$ref": "#/$defs/LayoutEngine" }
    },

    "LayoutEngine": {
      "oneOf": [
        { "$ref": "#/$defs/FocusLayoutEngine" },
        { "$ref": "#/$defs/SliceLayoutEngine" }
      ]
    },

    "FocusLayoutEngine": {
      "properties": {
        "type": { "const": "FocusLayoutEngine" },
        "name": { "type": "string" }
      },
      "required": ["type"]
    },

    "SliceLayoutEngine": {
      "properties": {
        "type": { "const": "SliceLayoutEngine" },
        "name": { "type": "string" },
        "variant": {
          "enum": [
            "ColumnLayout",
            "RowLayout",
            "PrimaryStackLayout",
            "MultiColumnLayout",
            "SecondaryPrimaryLayout"
          ]
        }
      },
      "required": ["type"]
    },

    "Monitor": {
      "type": "object",
      "properties": {
        "workspaces": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    },

    "Keybind": {
      "type": "object",
      "properties": {
        "command": { "type": "string" },
        "keybind": { "type": "string" }
      },
      "required": ["command", "keybind"]
    },

    "Filter": {
      "type": "object",
      "properties": {
        "type": {
          "enum": ["windowClass", "processFileName", "title", "titleMatch"]
        },
        "value": { "type": "string" }
      },
      "required": ["type", "value"]
    },

    "Router": {
      "type": "object",
      "properties": {
        "type": {
          "enum": ["windowClass", "processFileName", "title", "titleMatch"]
        },
        "value": { "type": "string" },
        "workspace": { "type": "string" }
      },
      "required": ["type", "value", "workspace"]
    },

    "PluginCollection": {
      "type": "array",
      "items": { "$ref": "#/$defs/Plugin" }
    },

    "Plugin": {
      "oneOf": [
        { "$ref": "#/$defs/GapsPlugin" },
        { "$ref": "#/$defs/FocusIndicatorPlugin" },
        { "$ref": "#/$defs/BarPlugin" }
      ]
    },

    "GapsPlugin": {
      "properties": {
        "type": { "const": "GapsPlugin" },
        "isEnabled": { "type": "boolean" },
        "gapSize": { "type": "number" }
      },
      "required": ["type", "gapSize"]
    },

    "FocusIndicatorPlugin": {
      "properties": {
        "type": { "const": "FocusIndicatorPlugin" },
        "isEnabled": { "type": "boolean" },
        "color": { "type": "string" },
        "borderSize": { "type": "number" }
      },
      "required": ["type"]
    },

    "BarPlugin": {
      "properties": {
        "type": { "const": "BarPlugin" },
        "isEnabled": { "type": "boolean" },
        "leftComponents": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/BarWidget"
          }
        }
      },
      "required": ["type"]
    },

    "BarWidget": {
      "oneOf": [{ "$ref": "#/$defs/DateTimeWidget" }]
    },

    "DateTimeWidget": {
      "type": "object",
      "properties": {
        "type": { "const": "DateTimeWidget" },
        "format": { "type": "string" },
        "interval": { "type": "number" }
      },
      "required": ["type"]
    }
  }
}
