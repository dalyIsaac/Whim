{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://raw.githubusercontent.com/dalyIsaac/Whim/main/src/Whim/Config/schema.json",

  "type": "object",
  "properties": {
    "workspaces": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/Workspace"
      }
    },

    "layoutEngines": {
      "$ref": "#/$defs/LayoutEngineCollection"
    },

    "monitors": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/Monitor"
      }
    },

    "keybinds": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/Keybind"
      }
    },

    "filters": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/Filter"
      }
    },

    "routers": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/Router"
      }
    },

    "plugins": {
      "$ref": "#/$defs/PluginCollection"
    }
  },

  "$defs": {
    "Workspace": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "layoutEngines": {
          "$ref": "#/$defs/LayoutEngineCollection"
        }
      },
      "required": ["name"]
    },

    "LayoutEngineCollection": {
      "type": "array",
      "oneOf": [
        { "$ref": "#/$defs/FocusLayoutEngine" },
        { "$ref": "#/$defs/SliceLayoutEngine" }
      ]
    },

    "LayoutEngineBase": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        }
      }
    },

    "FocusLayoutEngine": {
      "$ref": "#/$defs/LayoutEngineBase",
      "properties": {
        "type": {
          "enum": ["focus"]
        }
      },
      "required": ["type"]
    },

    "SliceLayoutEngine": {
      "$ref": "#/$defs/LayoutEngineBase",
      "properties": {
        "type": {
          "enum": ["slice"]
        },
        "variant": {
          "enum": [
            "ColumnLayout",
            "RowLayout",
            "PrimaryStackLayout",
            "MultiColumnLayout",
            "SecondaryPrimaryLayout"
          ]
        },
        "slices": {
          "type": "array",
          "items": {
            "type": "number"
          }
        }
      }
    },

    "Monitor": {
      "type": "object",
      "properties": {
        "workspaces": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },

    "Keybind": {
      "type": "object",
      "properties": {
        "command": {
          "type": "string"
        },
        "keybind": {
          "type": "string"
        }
      },
      "required": ["command", "keybind"]
    },

    "Filter": {
      "type": "object",
      "properties": {
        "type": {
          "enum": ["windowClass", "processFileName", "title", "titleMatch"]
        },
        "value": {
          "type": "string"
        }
      },
      "required": ["type", "value"]
    },

    "Router": {
      "type": "object",
      "properties": {
        "type": {
          "enum": ["windowClass", "processFileName", "title", "titleMatch"]
        },
        "value": {
          "type": "string"
        },
        "workspace": {
          "type": "string"
        }
      },
      "required": ["type", "value", "workspace"]
    },

    "PluginCollection": {
      "type": "array",
      "oneOf": [
        { "$ref": "#/$defs/GapsPlugin" },
        { "$ref": "#/$defs/FocusIndicatorPlugin" },
        { "$ref": "#/$defs/BarPlugin" }
      ]
    },

    "PluginBase": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "isEnabled": {
          "type": "boolean"
        }
      }
    },

    "GapsPlugin": {
      "$ref": "#/$defs/PluginBase",
      "properties": {
        "type": {
          "enum": ["GapsPlugin"]
        },
        "gapSize": {
          "type": "number"
        }
      },
      "required": ["type", "gapSize"]
    },

    "FocusIndicatorPlugin": {
      "$ref": "#/$defs/PluginBase",
      "properties": {
        "type": {
          "enum": ["FocusIndicatorPlugin"]
        },
        "color": {
          "type": "string"
        },
        "borderSize": {
          "type": "number"
        }
      },
      "required": ["type"]
    },

    "BarPlugin": {
      "$ref": "#/$defs/PluginBase",
      "properties": {
        "type": {
          "enum": ["BarPlugin"]
        },
        "leftComponents": {
          "type": "array",
          "oneOf": [{ "$ref": "#/$defs/DateTimeWidget" }]
        }
      },
      "required": ["type"]
    },

    "DateTimeWidget": {
      "type": "object",
      "properties": {
        "type": {
          "enum": ["DateTimeWidget"]
        },
        "format": {
          "type": "string"
        },
        "interval": {
          "type": "number"
        }
      },
      "required": ["type", "format"]
    }
  }
}
