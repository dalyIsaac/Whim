{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://raw.githubusercontent.com/dalyIsaac/Whim/main/src/Whim/Config/schema.json",

  "type": "object",
  "required": [
    "workspaces",
    "layoutEngines",
    "monitors",
    "keybinds",
    "filters",
    "routers",
    "plugins"
  ],

  "properties": {
    "workspaces": {
      "type": "array",
      "items": { "$ref": "#/$defs/Workspace" }
    },

    "layoutEngines": { "$ref": "file:layout-engine-schema.json" },

    "monitors": {
      "type": "array",
      "items": { "$ref": "#/$defs/Monitor" }
    },

    "keybinds": {
      "type": "array",
      "items": { "$ref": "#/$defs/Keybind" }
    },

    "filters": {
      "type": "array",
      "items": { "$ref": "#/$defs/Filter" }
    },

    "routers": {
      "type": "array",
      "items": { "$ref": "#/$defs/Router" }
    },

    "plugins": { "$ref": "file:plugin-schema.json" }
  },

  "$defs": {
    "Workspace": {
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "layoutEngines": { "$ref": "file:layout-engine-schema.json" }
      },
      "required": ["name"]
    },

    "Monitor": {
      "type": "object",
      "properties": {
        "workspaces": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    },

    "Keybind": {
      "type": "object",
      "properties": {
        "command": { "type": "string" },
        "keybind": { "type": "string" }
      },
      "required": ["command", "keybind"]
    },

    "Filter": {
      "type": "object",
      "properties": {
        "type": {
          "enum": ["windowClass", "processFileName", "title", "titleMatch"]
        },
        "value": { "type": "string" }
      },
      "required": ["type", "value"]
    },

    "Router": {
      "type": "object",
      "properties": {
        "type": {
          "enum": ["windowClass", "processFileName", "title", "titleMatch"]
        },
        "value": { "type": "string" },
        "workspace": { "type": "string" }
      },
      "required": ["type", "value", "workspace"]
    }
  }
}
